  "license": "MIT",
  "dependencies": {
    "commander": "^9.4.1",
    "lru-cache": "^7.14.0",
    "semver": "^7.3.7",
    "sigmund": "^1.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.7.23",
    "@types/semver": "^7.3.12",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "typescript": "^4.8.4"
  }
}
